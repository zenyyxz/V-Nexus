{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "v-nexus",
  "version": "3.0.0",
  "identifier": "com.vnexus.client",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "V-Nexus",
        "width": 1000,
        "height": 700,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/xray",
      "resources/tun2socks"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "uninstallerIcon": "icons/icon.ico",
        "headerImage": "icons/HeaderImage.bmp",
        "sidebarImage": "icons/SidebarImage.bmp",
        "installMode": "both"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/zenyyxz/V-Nexus/releases/latest/download/latest.json"
      ],
      "pubkey": "RWSRzDfIrRpA1Dzi1TQNQI3LFXgWttCUJrTvasGrvhJtgzk+7IdAJcD"
    }
  }
}